<div id="<%= dom_id note %>" class="card text-dark bg-<%= @status_to_color[note.status] %> p-2 shadow mb-5 rounded">
  <div class="card-header text-center">
    <%= note.name %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= note.description %></p>
  </div>
  <div class="d-flex gap-3">
    <%= link_to "Edit", edit_note_path(note), class: "btn btn-success btn-sm flex-grow-1" %>
    <%= link_to "Delete", note, class: "btn btn-danger btn-sm flex-grow-1", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
  </div>

</div>
